<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TimeForecastItem.Container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time_forecast_item_time"
        style="@style/SecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="12:00" />

    <ImageView
        android:id="@+id/time_forecast_item_condition"
        style="@style/TimeForecastItem.Condition"
        android:layout_below="@id/time_forecast_item_time"
        android:layout_centerHorizontal="true"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/time_forecast_item_temperature"
        style="@style/PrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_forecast_item_condition"
        android:layout_centerHorizontal="true"
        tools:text="20.0Ëš" />

</RelativeLayout>