<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Search -->
    <style name="Search" />

    <style name="Search.Weather">
        <item name="android:padding">@dimen/default_spacing_big</item>
    </style>

    <style name="Search.PastQueries" />

    <style name="Search.PastQueries.Label" parent="SecondaryText">
        <item name="android:layout_marginStart">@dimen/default_spacing_big</item>
        <item name="android:layout_marginEnd">@dimen/default_spacing_big</item>
    </style>

    <style name="PastQueryItem" />

    <style name="PastQueryItem.Name" parent="PrimaryText">
        <item name="android:layout_marginStart">@dimen/default_spacing_big</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_medium</item>
    </style>

    <style name="PastQueryItem.Action">
        <item name="android:layout_marginStart">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/default_spacing_big</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_medium</item>
    </style>

    <style name="PastQueryItem.Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginStart">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/default_spacing_medium</item>
    </style>

    <!-- Current Weather -->
    <style name="CurrentWeather" />

    <style name="CurrentWeather.Container">
        <item name="cardCornerRadius">@dimen/default_spacing_small</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">@dimen/default_spacing_medium</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CurrentWeather.Location" parent="FocusText">
        <item name="android:layout_marginBottom">@dimen/default_spacing_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrentWeather.ConditionIcon">
        <item name="android:layout_marginStart">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/default_spacing_big</item>
    </style>

    <style name="CurrentWeather.TemperatureHighlight" parent="HighlightText">
        <item name="android:textSize">@dimen/default_text_size_secondary</item>
    </style>

    <style name="CurrentWeather.Action">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">@dimen/default_spacing_big</item>
    </style>

    <!-- Daily Forecast -->
    <style name="DateForecastItem" />

    <style name="DateForecastItem.Date" parent="PrimaryText">
        <item name="android:paddingTop">@dimen/default_spacing_big</item>
        <item name="android:paddingBottom">@dimen/default_spacing_medium</item>
        <item name="android:paddingStart">@dimen/default_spacing_medium</item>
        <item name="android:paddingEnd">@dimen/default_spacing_medium</item>
    </style>

    <style name="TimeForecastItem" />

    <style name="TimeForecastItem.Container">
        <item name="android:padding">@dimen/default_spacing_big</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TimeForecastItem.Condition">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

</resources>